<Window
    x:Class="Fish_DeObfuscator.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Fish DeObfuscator"
    Height="650"
    Width="650"
    MinHeight="650"
    MinWidth="550"
    Background="{StaticResource PrimaryBrush}"
    WindowStartupLocation="CenterScreen"
    AllowDrop="True"
    Drop="Window_Drop"
    DragOver="Window_DragOver"
>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Fish DeObfuscator" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextBrush}" />
            <TextBlock Text="Drag and drop a .NET assembly or browse to select" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0" />
        </StackPanel>
        <!-- File Selection -->
        <Border Grid.Row="1" Background="{StaticResource SecondaryBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox x:Name="FilePathTextBox" Grid.Column="0" IsReadOnly="True" Text="No file selected..." VerticalAlignment="Center" />
                <Button Grid.Column="1" Content="Browse" Style="{StaticResource SecondaryButton}" Margin="12,0,0,0" Click="BrowseButton_Click" />
            </Grid>
        </Border>
        <!-- Category Selection -->
        <Border Grid.Row="2" Background="{StaticResource SecondaryBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Obfuscator Type to Deobfuscate" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,12" />
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="ArmDotRadio" Content="ArmDot" GroupName="ObfuscatorType" IsChecked="True" Checked="ObfuscatorType_Changed" Margin="0,0,24,0" />
                </StackPanel>
            </StackPanel>
        </Border>
        <!-- Stages -->
        <Border Grid.Row="3" Background="{StaticResource SecondaryBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Deobfuscation Stages" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,16" />
                <!-- ArmDot Stages -->
                <StackPanel x:Name="ArmDotStagesPanel">
                    <WrapPanel>
                        <CheckBox x:Name="StringCheckBox" Content="String Decryption" Margin="0,0,24,12" IsChecked="True" />
                        <CheckBox x:Name="VirtualizationCheckBox" Content="Virtualization" Margin="0,0,24,12" IsChecked="True" />
                        <CheckBox x:Name="CalliCheckBox" Content="Calli" Margin="0,0,24,12" IsChecked="True" />
                        <CheckBox x:Name="ControlFlowCheckBox" Content="Control Flow" Margin="0,0,24,12" IsChecked="True" />
                        <CheckBox x:Name="LocalCleanerCheckBox" Content="Local Cleaner" Margin="0,0,24,12" IsChecked="True" />
                    </WrapPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Button Content="Select All" Style="{StaticResource SecondaryButton}" Padding="12,6" Click="SelectAll_Click" Margin="0,0,8,0" />
                        <Button Content="Deselect All" Style="{StaticResource SecondaryButton}" Padding="12,6" Click="DeselectAll_Click" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
        <!-- Footer -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <ProgressBar x:Name="ProgressBar" Width="150" Visibility="Collapsed" VerticalAlignment="Center" Margin="0,0,12,0" />
                <TextBlock x:Name="StatusText" Text="Ready" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" />
            </StackPanel>
            <Button x:Name="DeobfuscateButton" Grid.Column="1" Content="Deobfuscate" Style="{StaticResource PrimaryButton}" IsEnabled="False" Click="DeobfuscateButton_Click" />
        </Grid>
    </Grid>
</Window>
